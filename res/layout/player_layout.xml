<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_layout"
    android:layout_width="fill_parent"
    android:background="@color/light_black"
    android:layout_height="100dp" >

    <SeekBar
        android:id="@+id/seeker"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:paddingTop="6dp"
        android:layout_gravity="center_vertical"
        android:max="1000"
        android:progress="0"
        android:progressDrawable="@drawable/progress_seekbar"
        android:secondaryProgress="0"
        android:thumb="@drawable/progress_thumb"
        android:thumbOffset="4dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/seeker"
        android:layout_gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/play_mode"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/loop" />

        <ImageView
            android:id="@+id/ctrl_previous"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/last_song_selector" />

        <ImageView
            android:id="@+id/ctrl_pause_play"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/play_song_selector" />

        <ImageView
            android:id="@+id/ctrl_next"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/next_song_selector" />

        <!--
             <ImageView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/btn_player_timer" />
        -->

        <ImageView
            android:id="@+id/timer"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/timing_normal" />
    </LinearLayout>

</RelativeLayout>